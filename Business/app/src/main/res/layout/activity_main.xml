<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/business"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:textSize="42sp"
        android:textColor="#383d42"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Business Name"
        android:paddingBottom="15dp"/>

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="36sp"
        android:layout_height="42sp"
        android:layout_below="@id/name"
        android:src="@drawable/phone"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/phone_image"
        android:layout_toRightOf="@id/phone_image"
        android:text="874xxxxx01"
        android:textSize="36sp"
        android:paddingBottom="15dp"/>
    <ImageView
        android:id="@+id/email_image"
        android:layout_width="36sp"
        android:layout_height="42sp"
        android:layout_below="@id/phone_image"
        android:src="@drawable/email"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/email_image"
        android:layout_toRightOf="@id/email_image"
        android:text="xyz@domain.com"
        android:textSize="36sp"
        android:paddingBottom="15dp"/>

    <ImageView
        android:id="@+id/address_image"
        android:layout_width="36sp"
        android:layout_height="42sp"
        android:layout_below="@id/email_image"
        android:src="@drawable/address"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/address_image"
        android:layout_toRightOf="@id/address_image"
        android:text="Area, city, pin"
        android:textSize="36sp"
        android:paddingBottom="15dp"/>

    <ImageView
        android:id="@+id/hours_image"
        android:layout_width="36sp"
        android:layout_height="42sp"
        android:layout_below="@id/address_image"
        android:src="@drawable/clock"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hours_image"
        android:layout_toRightOf="@id/hours_image"
        android:text="10am-5pm"
        android:textSize="36sp"
        android:paddingBottom="10dp"/>


</RelativeLayout>